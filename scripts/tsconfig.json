{
    "compilerOptions": {
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "target": "ESNext",
        "moduleResolution": "Node",
        "module": "ESNext",
        "paths": {
            "@/*": ["../src/*"],
            "@/packages": ["../src/packages/*"]
        }
    },
    "include": ["./**/*.ts", "./utils/*.ts", "../src/**/*.ts"],
    "ts-node": {
        "require": ["tsconfig-paths/register"],
        "esm": true,
        "experimentalSpecifierResolution": "explicit"
    }
}
